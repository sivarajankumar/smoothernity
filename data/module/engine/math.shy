    proc hard_attack_easy_decay 
        args result_value weight
             from_value from_weight 
             mid_value mid_weight
             to_value to_weight
        ops
            if platform_conditions_fract_less_than_fract weight from_weight do
                result_value <- from_value
            elif platform_conditions_fract_less_than_fract weight mid_weight do
                hard_in_easy_out result_value weight
                                 from_value from_weight mid_value mid_weight
            elif platform_conditions_fract_less_than_fract weight to_weight do
                easy_in_easy_out result_value weight
                                 mid_value mid_weight to_value to_weight
            else
                result_value <- to_value

    copy
        proc clamp_what_dest
            args result num xfrom xto 
            ops
                if platform_conditions_what_less_than_what num xfrom do
                    result <- xfrom
                elif platform_conditions_what_greater_than_what num xto do
                    result <- xto
                else
                    result <- num
        proc clamp_what_direct
            args num xfrom xto 
            ops
                if platform_conditions_what_less_than_what num xfrom do
                    num <- xfrom
                elif platform_conditions_what_greater_than_what num xto do
                    num <- xto
        proc min_what
            args result a b
            ops
                if platform_conditions_what_less_than_what a b do
                    result <- a
                else
                    result <- b
        proc max_what
            args result a b
            ops
                if platform_conditions_what_greater_than_what a b do
                    result <- a
                else
                    result <- b
