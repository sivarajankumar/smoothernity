    proc abs_whole
        args result a
        ops
            if platform_conditions_whole_less_than_zero a do
                platform_math_neg_whole result a
            else
                result <- a

    proc matrix_rotation_z 
        args axis_x axis_y angle 
        vars rot_sin rot_cos
             axis_x_x axis_x_y axis_x_z
             axis_y_x axis_y_y axis_y_z
        ops
            platform_math_sin rot_sin angle
            platform_math_cos rot_cos angle
            axis_x_x <- rot_cos
            axis_x_y <- rot_sin
            axis_x_z <- 0
            platform_math_neg_fract axis_y_x rot_sin
            axis_y_y <- rot_cos
            axis_y_z <- 0
            platform_vector_xyz
                axis_x axis_x_x axis_x_y axis_x_z
                axis_y axis_y_x axis_y_y axis_y_z

    proc matrix_scale
        args matrix scale
        ops
            with platform_matrix
                identity matrix
                set_fract_axis_x matrix scale 0 0
                set_fract_axis_y matrix 0 scale 0
                set_fract_axis_z matrix 0 0 scale

    proc matrix_scale_rotation_z
        args matrix scale angle
        vars axis_x axis_y axis_z
        ops
            platform_matrix_identity matrix
            platform_vector_xyz axis_z 0 0 1
            matrix_rotation_z axis_x axis_y angle
            platform_vector_mul_by
                axis_x scale
                axis_y scale
                axis_z scale
            with platform_matrix
                set_vector_axis_x matrix axis_x
                set_vector_axis_y matrix axis_y
                set_vector_axis_z matrix axis_z

    proc matrix_look_at
        args matrix vfrom vto norm_up 
        vars dir axis_x axis_y axis_z
        ops
            with platform_vector
                sub dir vfrom vto
                normalize axis_z dir
                cross_product axis_x norm_up axis_z
                cross_product axis_y axis_z axis_x
            with platform_matrix
                set_vector_axis_x matrix axis_x
                set_vector_axis_y matrix axis_y
                set_vector_axis_z matrix axis_z
                set_vector_origin matrix vfrom
                inverse_rotation_translation matrix

    proc add_frame_to_time
        args time
        ops
            platform_math_add_to_fract
                time platform_consts_seconds_per_frame

    proc make_radians_from_periods
        args result periods
        ops
            platform_math_mul_fracts result periods platform_math_consts_fract_2pi

    proc make_cartesian_from_polar 
        args result radius angle
        vars rot_sin rot_cos
        ops
            platform_math_sin rot_sin angle
            platform_math_cos rot_cos angle
            platform_vector_xyz result rot_cos rot_sin 0
            platform_vector_mul_by result radius

    proc shift
        args result value shifter times_whole
        vars total_shift times
        ops
            platform_math_make_fract_from_whole times times_whole
            platform_math_mul_fracts total_shift times shifter
            platform_math_sub_fracts result value total_shift
